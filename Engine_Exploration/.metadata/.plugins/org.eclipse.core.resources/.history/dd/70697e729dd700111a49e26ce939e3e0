entity = class('entity')

function entity:getBounds(image)
	self.upBound = image:getHeight()/2
	self.downBound = image:getHeight()/2
	self.leftBound = image:getWidth()/2
	self.rightBound = image:getWidth()/2
	
	for self.i,image:getWidth() do
		for self.j,image:getHeight() do
			self.a, self.b, self.c, self.d = image:getPixel()
			if self.d == 0 then
				if self.i < self.leftBound then self.leftBound = self.i end
				if self.i > self.rightBound then self.rightBound = self.i end
				if self.j < self.upBound then self.upBound = self.j end
				if self.j > self.downBound then self.downBound = self.j end
			end
		end
	end
end

function entity:initialize(image)
	entity.getBounds(image)
end